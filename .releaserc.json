{
    "branches": [
        "main",
        "master",
        "next",
        "next-major",
        "+([0-9])?(.{+([0-9]),x}).x",
        {
            "name": "beta",
            "prerelease": true
        },
        {
            "name": "alpha",
            "prerelease": true
        }
    ],
    "plugins": [
        "semantic-release-gitmoji",
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "hatch version ${nextRelease.version}"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [".github/VERSION"],
                "message": "ðŸ”– mac-dev-setup ${nextRelease.version}\n\n${nextRelease.notes}\n[skip ci]"
            }
        ],
        "@semantic-release/github"
    ]
}
